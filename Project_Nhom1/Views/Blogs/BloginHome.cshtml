@model List<Model.EF.Blog>
<!-- Blog Section Begin -->
<style>
    .blog__item__body__home p {
        white-space: nowrap;
        width: 100%;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    .blog__item__body__home {
        white-space: nowrap;
        height: 50px;
        overflow: hidden;
    }
</style>
<section class="from-blog spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title from-blog__title">
                    <h2>From The Blog</h2>
                </div>
            </div>
        </div>
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-lg-4 col-md-4 col-sm-6">
                    <div class="blog__item">
                        <div class="blog__item__pic">
                            <img src="~/Content/Images/@item.BlogImg" alt="">
                        </div>
                        <div class="blog__item__text">
                            <ul>
                                <li><i class="fa fa-calendar-o"></i> @item.CreateDate</li>
                            </ul>
                            <h5><a href="@Url.Action("Details","Blogs",new {id = item.BlogID })">@item.Title</a></h5>
                            <div class="blog__item__body__home">
                                @Html.Raw(item.Body)
                            </div>
                        </div>
                    </div>
                </div>
            }                      
        </div>
    </div>
</section>
<!-- Blog Section End -->
