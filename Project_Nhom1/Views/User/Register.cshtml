@model Project_Nhom1.Models.RegisterModel
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<div class="container register-container">
    <div class="row">
        <div class="col-md-2"></div>
        <div class="col-md-8 col-md-offset-3">
            @using (Html.BeginForm("Register", "User", FormMethod.Post))
            {
                <h2>Register</h2>
                <hr class="colorgraph">
                <div class="col-md-12"><span class="error-message">@ViewBag.UserExistError</span></div>
                <div class="form-group">
                    @if(ViewBag.Success != null)
                    {
                        <div class="alert alert-success">@ViewBag.Success

                        </div>
                    }
                </div>
                <div class="form-group">
                    @Html.TextBoxFor(m => m.UserName, new { @class = "form-control input-lg", placeholder = "Name account" })
                    @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "error-message" })
                </div>
                <div class="row">
                    <div class="col-xs-12 col-sm-6 col-md-6">
                        <div class="form-group">
                            @Html.TextBoxFor(m => m.Password, new { type = "password", @class = "form-control input-lg", placeholder = "Password" })
                            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "error-message" })
                        </div>
                    </div>
                    <div class="col-xs-12 col-sm-6 col-md-6">
                        <div class="form-group">
                            @Html.TextBoxFor(m => m.ConfirmPassword, new { type = "password", @class = "form-control input-lg", placeholder = "Confirm Password" })
                            @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "error-message" })
                        </div>
                    </div>
                    <div class="col-md-12"><span class="error-message">@ViewBag.Error</span></div>
                </div>
                <div class="row">
                    <div class="col-xs-12 col-sm-6 col-md-6">
                        <div class="form-group">
                            @Html.TextBoxFor(m => m.Name, new { @class = "form-control input-lg", @placeholder = "Full Name" })
                        </div>
                    </div>
                    <div class="col-xs-12 col-sm-6 col-md-6">
                        <div class="form-group">
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control input-lg", @placeholder = "Email" })
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    @Html.TextBoxFor(m => m.Address, new { @class = "form-control input-lg", placeholder = "Address" })
                </div>

                <hr class="colorgraph">
                <div class="row">
                    <div class="col-xs-12 col-md-6"><input type="submit" value="Register" class="btn btn-primary btn-block btn-lg" tabindex="7"></div>
                </div>
            }
        </div>
        <div class="col-md-2"></div>
    </div>
</div>
